<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/registrationLayout"
    android:background="@drawable/background"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:text="New Registration" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:inputType="text"
        android:drawableStart="@drawable/user"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:textColorHint="@color/hint_color"
        android:hint="Name"
        />

    <EditText
        android:id="@+id/mobileNumber2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:hint="Mobile Number"
        android:inputType="phone"
        android:drawableStart="@drawable/phone"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:textColorHint="@color/hint_color" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edit_text_background"
        android:padding="10dp"
        android:textColorHint="@color/hint_color"
        android:drawableStart="@drawable/email"
        android:drawablePadding="7dp"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <RelativeLayout android:layout_height="wrap_content"
    android:layout_width="match_parent">

        <EditText
        android:id="@+id/clgLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:inputType="text"
        android:padding="10dp"
        android:drawableStart="@drawable/map"
        android:drawablePadding="10dp"
        android:textColorHint="@color/hint_color"
        android:hint="Looking for college in"
         />

        <ImageView
            android:id="@+id/imageView1"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/clgLocation"
            android:layout_alignBottom="@+id/clgLocation"
            android:layout_alignRight="@+id/clgLocation"
            android:src="@drawable/location" />


    </RelativeLayout>

    <EditText
        android:id="@+id/newPassword1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:padding="10dp"
        android:textColorHint="@color/hint_color"
        android:drawableStart="@drawable/password"
        android:drawablePadding="7dp"
        android:hint="Password"
        android:inputType="textPassword" />

<!--    <EditText-->
<!--        android:id="@+id/newPassword2"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_gravity="center_horizontal"-->
<!--        android:layout_marginTop="10dp"-->
<!--        android:layout_marginStart="30dp"-->
<!--        android:layout_marginEnd="30dp"-->
<!--        android:background="@drawable/edit_text_background"-->
<!--        android:ems="10"-->
<!--        android:padding="10dp"-->
<!--        android:textColorHint="@color/hint_color"-->
<!--        android:hint="Enter password again"-->
<!--        android:inputType="textPassword" />-->

    <Button
        android:id="@+id/newRegistration"
        android:layout_width="match_parent"
        android:background="@drawable/btn_background"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="Register" />


    <Button
        android:id="@+id/btn_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@android:color/transparent"
        android:hint="Already Registered? Click Here" />


</LinearLayout>