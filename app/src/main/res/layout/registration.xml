<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/registrationLayout"
    android:background="@drawable/artboard2"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:textSize="26dp"
        android:text="Create  Your  Account"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-condensed-medium"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:inputType="text"
        android:drawableStart="@drawable/user"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:textColorHint="@color/hint_color"
        android:hint="Name"
        />

    <EditText
        android:id="@+id/mobileNumber2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:hint="Mobile Number"
        android:inputType="phone"
        android:drawableStart="@drawable/phone"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:textColorHint="@color/hint_color" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edit_text_background"
        android:padding="10dp"
        android:textColorHint="@color/hint_color"
        android:drawableStart="@drawable/email"
        android:drawablePadding="7dp"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

    <EditText
        android:id="@+id/clgLocation"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="7dp"
        android:background="@drawable/edit_text_background"
        android:drawableStart="@drawable/map"
        android:drawablePadding="8dp"
        android:ems="10"
        android:hint="Looking for college in"
        android:inputType="text"
        android:padding="10dp"
        android:textColorHint="@color/hint_color" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_my_location_black_24dp"
            android:background="@drawable/edit_text_background"
            android:foregroundGravity="center"
            android:layout_marginEnd="30dp" />

    </LinearLayout>

    <EditText
        android:id="@+id/newPassword1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:padding="10dp"
        android:textColorHint="@color/hint_color"
        android:drawableStart="@drawable/password"
        android:drawablePadding="7dp"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/newPassword2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:padding="10dp"
        android:textColorHint="@color/hint_color"
        android:drawableStart="@drawable/password"
        android:drawablePadding="7dp"
        android:hint="Confirm Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/newRegistration"
        android:layout_width="match_parent"
        android:background="@drawable/btn_background"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="Register" />


    <Button
        android:id="@+id/btn_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@android:color/transparent"
        android:hint="Already Registered? Click Here" />


</LinearLayout>